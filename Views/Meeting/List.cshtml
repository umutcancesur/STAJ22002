@model List<UserInfo>
@{
ViewBag.Title = "Toplantı Katılım Listesi";
}
<main class="text-center">
    <h1 class="h4">Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var user in Model)
            {
                var durum = user.WillAttend == true ? "Evet" : "Hayır";
                var className = user.WillAttend == true ? "table-success" : "table-danger";
                if (user.WillAttend == true)
                {
                    i++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td><a class="btn btn-sm btn-primary" asp-controller="Meeting" asp-action="Details" asp-route-id="@user.Id">Detay</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılım Sayısı: @i</span>
            <hr>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Anasayfa</a>
        </div>
    </div>
</main>