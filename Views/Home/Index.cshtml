@model MeetingInfo
@{
ViewBag.Title = "Toplantı Başvuru";
Layout = "~/Views/Shared/_Layout2.cshtml";
}
<main class="text-center">

<h1 class="h4">@ViewBag.Selamlama</h1>
<p>Toplantı katılım durumunuzu bilidiriniz.</p>
<div class="card my-2">
    <ul class="list-group list-group-flash">
        <li class="list-group-item">Konum: @Model.Location</li>
        <li class="list-group-item">Tarih: @Model.Date.ToString("dd.MM.yyyy HH:mm")</li>
        <li class="list-group-item">Katılımcı Sayısı: @Model.NumberOfPeople</li>
    </ul>
</div>
<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>
</main>